{% extends 'characters/baseCharacter.html.twig' %} 
  {% block contenido %}
    {% for mensaje in app.flashes('success') %}
      <p>{{ mensaje }}</p>
    {% endfor %}
    <h2>Listado de Personajes</h2>
    <div class="row row-cols-1 row-cols-md-2">
      {% for character in characters %}
      <div class="col mb-4">
        <div class="card" style="width: 18rem">
          <img src="{{ character.imagen }}" class="card-img-top" />
          <div class="card-body">
            <h5 class="card-title">{{ character.nombre }}</h5>
            <p class="card-text">{{ character.estado }}</p>
            <a href="{{ path('showCharacter',{id:character.id}) }}" class="btn btn-primary">MÃ¡s Info</a>
            <a href="{{ path('editCharacter',{id:character.id}) }}" class="btn btn-primary">Editar</a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('deleteCharacter',{id:character.id}) }}" class="btn btn-danger">Borrar</a>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    
    {% endblock %}
    

    